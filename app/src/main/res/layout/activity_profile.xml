<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <Button
        android:id="@+id/profile_decline_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/decline_friend_request"
        android:textColor="@color/design_default_color_on_secondary" />

    <Button
        android:id="@+id/profile_send_req_btn"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/send_friend_request"
        android:textColor="@color/design_default_color_on_secondary" />

    <RelativeLayout
        android:id="@+id/rellay1"
        android:layout_width="match_parent"
        android:background="@drawable/gradient2"
        android:paddingBottom="30dp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/imgUser"
            android:layout_width="wrap_content"
            android:background="@drawable/circle_border"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="9dp"
                android:background="@drawable/circle"
                android:padding="3dp"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/profile_displayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgUser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15sp"
            android:fontFamily="sans-serif-light"
            android:text="@string/displayname"
            android:textColor="@color/places_text_white_alpha_26"
            android:textSize="32sp"
            tools:text="Display Name" />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/rellay1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>


    <RelativeLayout
        android:id="@+id/rellay2"
        android:layout_width="match_parent"
        android:background="#240b36"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/rellay1"
        android:gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="453K"
                android:textSize="25sp"
                android:textColor="@color/places_text_white_alpha_26"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="followers"
                android:textAllCaps="true"
                android:textSize="13sp"
                android:textColor="@color/places_text_white_alpha_26"
                android:fontFamily="sans-serif-light"/>

        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rellay3"
        android:layout_width="match_parent"
        android:paddingTop="30dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/rellay2"
        android:gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_marginLeft="70dp"/>

            <TextView
                android:id="@+id/profile_totalFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/total_friends"
                android:textColor="@color/quantum_black_100"
                android:textSize="18sp" />









        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rellay4"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/rellay3"
        android:gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_music_note_black_24dp"
                android:layout_marginLeft="70dp"/>

            <TextView
                android:id="@+id/profile_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/genre"
                android:textColor="@color/quantum_black_100"
                android:textSize="18sp" />









        </LinearLayout>


    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/rellay"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/rellay4"
        android:gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/microphone"
                android:layout_marginLeft="70dp"/>

            <TextView
                android:id="@+id/profile_instruments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/instrument"
                android:textColor="@color/quantum_black_100"
                android:textSize="18sp" />









        </LinearLayout>


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rellay6"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="100dp"
        android:layout_below="@+id/rellay"
        android:gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/profile_status"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="@string/user_default_status"
            android:textColor="@color/quantum_black_100"
            android:textSize="18sp" />



    </RelativeLayout>




</RelativeLayout>
